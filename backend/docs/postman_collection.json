{
  "info": {
    "name": "Avengers DineOps API",
    "description": "Complete API collection for Avengers DineOps food ordering system with RBAC",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "restaurant_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "order_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "menu_item_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "payment_method_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Check if the API is running"
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login - Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"nick@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login as ADMIN user (Nick)"
          }
        },
        {
          "name": "Login - Manager (US)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"captain.america@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login as MANAGER user (Captain America - US)"
          }
        },
        {
          "name": "Login - Member (IN)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"thanos@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login as MEMBER user (Thanos - India)"
          }
        }
      ]
    },
    {
      "name": "Users (ADMIN Only)",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            },
            "description": "Get all users (ADMIN only)"
          }
        },
        {
          "name": "Update User Role",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"MANAGER\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/:userId/role",
              "host": ["{{base_url}}"],
              "path": ["users", ":userId", "role"],
              "variable": [
                {
                  "key": "userId",
                  "value": ""
                }
              ]
            },
            "description": "Update user role (ADMIN only)"
          }
        },
        {
          "name": "Update User Country",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"country\": \"US\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/:userId/country",
              "host": ["{{base_url}}"],
              "path": ["users", ":userId", "country"],
              "variable": [
                {
                  "key": "userId",
                  "value": ""
                }
              ]
            },
            "description": "Update user country (ADMIN only)"
          }
        }
      ]
    },
    {
      "name": "Restaurants",
      "item": [
        {
          "name": "Get Restaurants (Country Filtered)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const restaurants = pm.response.json();",
                  "    if (restaurants.length > 0) {",
                  "        pm.collectionVariables.set('restaurant_id', restaurants[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/restaurants",
              "host": ["{{base_url}}"],
              "path": ["restaurants"]
            },
            "description": "Get restaurants filtered by user's country"
          }
        },
        {
          "name": "Get All Restaurants (ADMIN)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/restaurants/all",
              "host": ["{{base_url}}"],
              "path": ["restaurants", "all"]
            },
            "description": "Get all restaurants from all countries (ADMIN only)"
          }
        },
        {
          "name": "Get Restaurant Menu",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const menuItems = pm.response.json();",
                  "    if (menuItems.length > 0) {",
                  "        pm.collectionVariables.set('menu_item_id', menuItems[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/restaurants/{{restaurant_id}}/menu",
              "host": ["{{base_url}}"],
              "path": ["restaurants", "{{restaurant_id}}", "menu"]
            },
            "description": "Get menu items for a specific restaurant"
          }
        },
        {
          "name": "Create Restaurant (ADMIN)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Restaurant\",\n  \"country\": \"IN\",\n  \"status\": \"ACTIVE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/restaurants",
              "host": ["{{base_url}}"],
              "path": ["restaurants"]
            },
            "description": "Create a new restaurant (ADMIN only)"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Get Orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            },
            "description": "Get orders filtered by user's country"
          }
        },
        {
          "name": "Create Order",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const order = pm.response.json();",
                  "    pm.collectionVariables.set('order_id', order.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurantId\": \"{{restaurant_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            },
            "description": "Create a new order in DRAFT status"
          }
        },
        {
          "name": "Get Order Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}"]
            },
            "description": "Get details of a specific order"
          }
        },
        {
          "name": "Add Item to Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"menuItemId\": \"{{menu_item_id}}\",\n  \"quantity\": 2\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}/items",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}", "items"]
            },
            "description": "Add a menu item to an order"
          }
        },
        {
          "name": "Remove Item from Order",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}/items/:itemId",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}", "items", ":itemId"],
              "variable": [
                {
                  "key": "itemId",
                  "value": ""
                }
              ]
            },
            "description": "Remove an item from an order"
          }
        },
        {
          "name": "Checkout Order (ADMIN/MANAGER)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentMethodId\": \"{{payment_method_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}/checkout",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}", "checkout"]
            },
            "description": "Checkout an order (ADMIN/MANAGER only)"
          }
        },
        {
          "name": "Cancel Order (ADMIN/MANAGER)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/orders/{{order_id}}/cancel",
              "host": ["{{base_url}}"],
              "path": ["orders", "{{order_id}}", "cancel"]
            },
            "description": "Cancel an order (ADMIN/MANAGER only)"
          }
        }
      ]
    },
    {
      "name": "Payment Methods",
      "item": [
        {
          "name": "Get Payment Methods",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const paymentMethods = pm.response.json();",
                  "    if (paymentMethods.length > 0) {",
                  "        pm.collectionVariables.set('payment_method_id', paymentMethods[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/payment-methods",
              "host": ["{{base_url}}"],
              "path": ["payment-methods"]
            },
            "description": "Get all active payment methods"
          }
        },
        {
          "name": "Create Payment Method (ADMIN)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"label\": \"Test Card\",\n  \"brand\": \"MOCK\",\n  \"last4\": \"1234\",\n  \"expMonth\": 12,\n  \"expYear\": 2025,\n  \"country\": \"IN\",\n  \"isDefault\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment-methods",
              "host": ["{{base_url}}"],
              "path": ["payment-methods"]
            },
            "description": "Create a new payment method (ADMIN only)"
          }
        },
        {
          "name": "Update Payment Method (ADMIN)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"label\": \"Updated Card Label\",\n  \"active\": true,\n  \"isDefault\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment-methods/:paymentMethodId",
              "host": ["{{base_url}}"],
              "path": ["payment-methods", ":paymentMethodId"],
              "variable": [
                {
                  "key": "paymentMethodId",
                  "value": "{{payment_method_id}}"
                }
              ]
            },
            "description": "Update a payment method (ADMIN only)"
          }
        }
      ]
    }
  ]
}
